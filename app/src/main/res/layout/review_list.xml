                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:isIndicator="false"
                />

        </LinearLayout>

        </LinearLayout>

